@model List<Tp_CourseWork.Models.ViewModels.Statistic>
@{
    ViewBag.Title = "Статистика";
}

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href='@Url.Content("~/wwwroot/lib/jqueryui/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            background: url('https://www.kartdeko.ru/upload/iblock/4f0/9zk0js2yb23oss2ffn693v85vj3nz3k0.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h2 {
            color: #333;
            text-align: center;
            padding-top: 20px;
            margin-top: 20px;
            font-size: 4em;
        }

        table {
            border-collapse: collapse;
            width: 80%;
            margin: 40px auto;
            background-color: rgba(255, 255, 255, 0.3);
        }

        table, th, td {
            border: 2px solid #ddd;
            text-align: center;
        }

        th, td {
            padding: 20px;
            font-size: 2em;
        }

        th {
            background-color: rgba(242, 242, 242, 0.3);
        }

        .back-link {
            margin-top: 20px;
            text-align: center;
            color: #464342;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <h2>Статистика</h2>
    <table class="table">
        <thead>
            <tr><th>Поле</th><th>Median</th><th>Mean</th><th>Max</th><th>Min</th></tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr><td>@s.Name</td><td>@s.Median</td><td>@s.Mean</td><td>@s.Max</td><td>@s.Min</td></tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Назад", "Index", "Home", new { @class = "back-link" })
</body>
</html>
